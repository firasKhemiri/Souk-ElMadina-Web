

{% extends "AppBundle:articles:contact.html.twig" %}
{% block container %}

<section class="bgwhite p-t-66 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 p-b-30">
                <div class="p-r-20 p-r-0-lg">
                    <div class="contact-map size21" id="google_map" data-map-x="40.614439" data-map-y="-73.926781" data-pin="images/icons/icon-position-map.png" data-scrollwhell="0" data-draggable="1"></div>
                </div>
            </div>

            <div class="col-md-6 p-b-30">
                <form class="leave-comment" action="{{ path('ajoutreclamation') }}">
                    <h4 class="m-text26 p-b-36 p-t-15">
                        Reclammation :
                    </h4>

                    <div class="bo4 of-hidden size15 m-b-20">
                        {{ form_start(ReclamationForm) }}
                        <p>identifiant acheteur</p> {{ form_widget(ReclamationForm.acheteur) }}
                    </div>

                    <div class="bo4 of-hidden size15 m-b-20">
                        <p>identifiant article</p>{{ form_widget(ReclamationForm.article) }}
                    </div>


                    <p>Message</p>{{ form_widget(ReclamationForm.reclamation) }}

                    <div class="w-size25">
                        <!-- Button -->
                        <button class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4">
                            Send
                        </button>
                        {{ form_end(ReclamationForm) }}
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
    {% endblock %}