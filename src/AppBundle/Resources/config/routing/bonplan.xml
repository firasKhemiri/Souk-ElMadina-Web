<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="bonplan_index" path="/" methods="GET">
        <default key="_controller">AppBundle:BonPlan:index</default>
    </route>

    <route id="bonplan_show" path="/{id}/show" methods="GET">
        <default key="_controller">AppBundle:BonPlan:show</default>
    </route>

    <route id="bonplan_new" path="/new" methods="GET|POST">
        <default key="_controller">AppBundle:BonPlan:new</default>
    </route>

    <route id="bonplan_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">AppBundle:BonPlan:edit</default>
    </route>

    <route id="bonplan_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">AppBundle:BonPlan:delete</default>
    </route>

</routes>
